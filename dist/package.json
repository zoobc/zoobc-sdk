{
  "name": "zoobc",
  "version": "0.0.4-pre-release",
  "description": "A small set of libraries to implement applications connect with the P2P API of the nodes in the blockchain",
  "author": "ZooBC SDK Team",
  "license": "Apache-2.0",
  "private": false,
  "main": "index.js",
  "module": "index.es.js",
  "types": "index.d.ts",
  "keywords": [
    "blockchain",
    "blockchain-zoo",
    "zoobc",
    "zoobc-sdk-js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zoobc/zoobc-sdk-js"
  },
  "bugs": {
    "url": "https://github.com/zoobc/zoobc-sdk-js/issues"
  },
  "scripts": {
    "clean": "rimraf dist",
    "test": "mocha -r ts-node/register tests/**/*.test.ts",
    "build": "run-s clean && npm run prettier && run-p buildEs buildCjs",
    "buildEs": "NODE_ENV=es rollup -c",
    "buildCjs": "NODE_ENV=cjs rollup -c",
    "lint": "eslint \"{src,tests}/**/*\" --fix",
    "prettier": "prettier --write \"{src,tests}/**/*\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,tests}/*.{ts,test.ts}": [
      "npm run prettier",
      "npm run test",
      "git add"
    ]
  },
  "dependencies": {
    "@improbable-eng/grpc-web": "^0.9.6",
    "grpc-web": "^1.0.5",
    "ts-node": "^8.3.0",
    "ts-protoc-gen": "^0.10.0"
  },
  "devDependencies": {
    "@improbable-eng/grpc-web-node-http-transport": "^0.9.6",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.7",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "chai": "^4.2.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.1",
    "install": "^0.13.0",
    "lint-staged": "^9.2.0",
    "mocha": "^6.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "rollup": "^1.17.0",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-filesize": "^6.1.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-typescript": "^1.0.1",
    "semantic-release": "^15.13.18",
    "ts-jest": "^24.0.2",
    "tslib": "^1.10.0",
    "typescript": "^3.5.3"
  },
  "peerDependencies": {
    "google-protobuf": "^3.9.0"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=6.0.0"
  }
}
